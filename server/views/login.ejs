<% include head.ejs%>

  <div id="login">
    <div class="login login-form col-sm-offset-4 col-sm-4">

        <% if (message.length) { %>
        <div class="alert alert-danger"><%= message %></div>
        <% } %>

        <!-- LOGIN FORM -->
        <form class="card" action="/login" method="post">
          <h1 class="card-title">Login</h1>
            <div class="form-group">
              <label>Email</label>
              <input type="text" class="form-control" name="email">
            </div>
            <div class="form-group">
              <label>Password</label>
              <input type="password" class="form-control" name="password">
            </div>

            <button type="submit" class="btn-hault btn btn-warning btn-lg">Login</button>
        </form>

        <p class="login-txt">Need to sign up for an account? <a href="/signup">Signup</a></p>
    </div>
  </div>

<% include subFoot.ejs %>
