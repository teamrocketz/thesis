<% include head.ejs%>

  <div id="signup">
    <div class="signup col-sm-offset-4 col-sm-4">

        <!-- show any messages that come back with authentication -->
        <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
        <% } %>

        <!-- LOGIN FORM -->
        <form class="card" action="/signup" method="post">
          <h1 class="card-title">Signup</h1>
            <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" name="email">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="password" autocomplete="nope">
            </div>
            <button type="submit" class="btn-hault btn btn-warning btn-lg">Signup</button>
        </form>

        <p class="login-txt">Already have an account? <a href="/login">Login</a></p>
    </div>
  </div>

