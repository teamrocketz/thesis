{
  "knex": {
    "client": "postgresql",
    "connection": {
      "host": "localhost",
      "port": 5432,
      "database": "hault",
      "user": "$USERNAME",
      "password": "postgres"
    },
    "pool": {
      "min": 1,
      "max": 2
    },
    "migrations": {
      "tableName": "knex_migrations",
      "directory": "db/migrations"
    },
    "seeds": {
      "directory": "db/seeds"
    }
  },

  "redis": {
    "url": "redis://localhost:6379",
    "logErrors": true
  },

  "session": {
    "secret": "more laughter, more love, more life"
  },

  "webserver": {
    "port": 3000
  }
}
